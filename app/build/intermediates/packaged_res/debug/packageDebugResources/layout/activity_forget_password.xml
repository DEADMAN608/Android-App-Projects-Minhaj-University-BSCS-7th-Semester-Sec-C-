<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ForgetPasswordActivity">


    <TextView
        android:id="@+id/textView12"
        android:textColor="#03A9F4"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Contact Domain Admin" />

    <TextView
        android:id="@+id/textView14"

        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Email: weartherlyappadmin@gmail.com"
        android:textSize="18dp"
        android:textColor="@color/SkyBlue"
        android:justificationMode="inter_word" />

    <View
        android:layout_width="320dp"
        android:layout_height="20dp"></View>

    <TextView
        android:id="@+id/textView100"

        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="If you forget your password while logging into Weatherly, the domain admin will assist you in recovering your account. Password reset requests will be processed within 24 hours to ensure a smooth and secure experience. Please contact support and provide the necessary details to verify your identity. We prioritize user security and appreciate your patience during this process."
        android:textSize="18dp"
        android:textColor="@color/black"
        android:justificationMode="inter_word" />

    <View
        android:layout_width="320dp"
        android:layout_height="20dp"></View>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Username/Email"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:paddingTop="6dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/Gray" />

    <Button
        android:id="@+id/btnResetPass"
        android:text="Send Password Link"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:backgroundTint="@color/Blue"
        android:textStyle="bold"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/btnBack"
        android:text="Back"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:backgroundTint="@color/Blue"
        android:textStyle="bold"
        android:textColor="@color/white" />

</LinearLayout>